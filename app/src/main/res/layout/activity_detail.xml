<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">
     <androidx.appcompat.widget.Toolbar
         android:id="@+id/toobar"
         app:title="Chi tiết"
         app:titleTextColor="#ffffff"
         android:background="#ff66"
         app:layout_constraintTop_toTopOf="parent"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize">
        <FrameLayout
            android:id="@+id/framecart"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="?attr/actionBarSize">
            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/menu_sl"
                android:layout_gravity="top|right"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

            <ImageView
                android:src="@drawable/add_shopping1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"/>
        </FrameLayout>


     </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgdetail"
            android:src="@drawable/icon_new_w35"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_150sdp"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtnamecate"
                android:text="Tên sản phẩm"
                android:gravity="center"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtprice"
                android:text="Giá: 100.000VND"
                android:gravity="left"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_10ssp"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:gravity="center"
                    android:id="@+id/spinner"
                    android:background="@drawable/back_spinner"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_30sdp">
                </Spinner>
                <Button
                    android:id="@+id/btnaddcart"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:backgroundTint="#ff66"
                    android:textSize="@dimen/_10sdp"
                    android:text="Thêm vào giỏ hàng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Chi tiết sản phẩm "
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_20ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp">
                <TextView
                    android:id="@+id/txtmotachitiet"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="left"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"/>
            </ScrollView>

        </LinearLayout>
        <ImageView
            android:layout_marginTop="-250dp"
            android:layout_marginLeft="-120dp"
            android:src="@drawable/baner2"
            android:layout_width="@dimen/_500sdp"
            android:layout_height="@dimen/_200sdp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>